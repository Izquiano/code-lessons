<h2>Login</h2>
<h4>{{message}}</h4>

<form method="POST" action="/login">
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="exampleInputEmail1"
            aria-describedby="emailHelp" name="email" value="{{user.email}}">
        {{#if error.email}}
        <div class="invalid-feedback">
            {{error.email.message}}
        </div>
        {{/if}}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control {{#if error.password}}is-invalid{{/if}}"
            id="exampleInputPassword1">
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>